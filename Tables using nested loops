#include<stdio.h>
void main()
{
   int i,j, number;
   printf("enter upper limit for the table:");
   scanf("%d",&number);
   for(j=1; j<=number; j++)
     {
       printf("\nthe %d Table: \n",j);
       for (i=1; i<=10; i++)
       { 
         printf("%d X %d = %d\n",j,i,(i*j));
        }
     
         printf("\n");
      }
       printf("all the tables printed");
}
